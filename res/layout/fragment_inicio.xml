<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/callejero" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-4dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/bordes_rectos" >

        <TextView
            android:id="@+id/lblServicioMaestro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnServicioMaestro"
            android:layout_centerHorizontal="true"
            android:text="@string/lblServicioMaestro" />

        <ImageButton
            android:id="@+id/brujula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lblServicioMaestro"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:layout_marginBottom="36dp"
            android:src="@drawable/bruju" />

        <ToggleButton
            android:id="@+id/btnServicioMaestro"
            android:background="@color/aguamarinaO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:padding="8dp"
            android:textColor="@color/blanco"
            android:textOn="@string/btnMaestroON"
            android:textOff="@string/btnMaestroOFF" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_marginTop="18dp"
        android:src="@drawable/worst3" />

</RelativeLayout>